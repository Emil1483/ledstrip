generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id
  ledstrips   Ledstrip[]    @relation("UserLedstrips")
  savedKwargs SavedKwargs[]
}

model Ledstrip {
  id    String @id
  name  String
  users User[] @relation("UserLedstrips")
}

model SavedKwargs {
  id     Int    @id @default(autoincrement())
  kwargs String
  mode   String
  name   String
  iconId Int

  userId String
  user   User   @relation(fields: [userId], references: [id])
}
